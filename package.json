{
  "name": "minigames",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc --build --clean && tsc && copyfiles -e **/*.ts -u 1 src/**/* public",
    "start": "npm run build && node ./bin/www",
    "test": "prettier --check src/",
    "dev": "nodemon --watch src -e ts,ejs,html,css,png,jpg,js --exec npm run build"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "copyfiles": "^2.3.0",
    "easy-livereload": "^1.4.3",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.4",
    "prettier": "2.1.2",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write src/"
  }
}
